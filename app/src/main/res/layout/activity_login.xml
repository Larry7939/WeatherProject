<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/login_background"
        android:scaleType="fitXY"
        >
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="0dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="18dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/login_icon">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="첫화면 날씨"
        android:textColor="@color/white"
        android:textSize="37dp"
        android:fontFamily="@font/opensansbold"
        android:shadowRadius="20"
        android:shadowColor="@color/black">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_naver"
        android:layout_width="320dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/naver_login_fixed"
        android:scaleType="fitXY"
        >
    </androidx.appcompat.widget.AppCompatImageView>
    <TextView
        android:id="@+id/tv_naver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네이버 계정으로 시작하기"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="@font/opensansextrabold"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/login_naver"
        app:layout_constraintEnd_toEndOf="@id/login_naver"
        app:layout_constraintStart_toStartOf="@id/login_naver"
        app:layout_constraintTop_toTopOf="@id/login_naver" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_kakao"
        android:layout_width="320dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/kakao_login_fixed2"
        android:scaleType="fitXY"
        >
    </androidx.appcompat.widget.AppCompatImageView>
    <TextView
        android:id="@+id/tv_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 계정으로 시작하기"
        android:textSize="18sp"
        android:textColor="#191919"
        android:textStyle="bold"
        android:fontFamily="@font/opensansextrabold"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/login_kakao"
        app:layout_constraintEnd_toEndOf="@id/login_kakao"
        app:layout_constraintStart_toStartOf="@id/login_kakao"
        app:layout_constraintTop_toTopOf="@id/login_kakao" />
</androidx.constraintlayout.widget.ConstraintLayout>